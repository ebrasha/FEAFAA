<UserControl x:Class="DataTable"
             x:Name="DataTable"            
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="135" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="27" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label DockPanel.Dock="Top" Grid.Row="0" Grid.ColumnSpan="2" Content="Vehicle Parameters" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Height="27" FontWeight="Bold" Background="#FFFFFFC3" BorderBrush="#FFABADB3" BorderThickness="1" Margin="0,5,0,0" />

        <Button x:Name="ButtonGrossWeightText" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Stretch">
            <TextBlock x:Name="TxtButtonGrossWeight" TextAlignment="Left"><Run Text="Gross Weight (lbs)"/></TextBlock>
        </Button>
        <TextBox x:Name="TextBoxGrossWeight" Grid.Row="1" Text="{Binding GrossWeight}" Focusable="False" Grid.Column="1"/>
        <Button x:Name="ButtonGrossWeightOnGearsText" Grid.Row="2" Grid.Column="0"  HorizontalContentAlignment="Stretch">
            <TextBlock Text="% GW on Main Gears" TextAlignment="Left"/>
        </Button>
        <TextBox x:Name="TextBoxGrossWeightOnGears" Grid.Row="2" Grid.Column="1" Text="{Binding GrossWeightOnGears, StringFormat={}{0:F2}}" Focusable="False"/>
        <Button x:Name="ButtonNumGearsText" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Stretch">
            <TextBlock Text="No. Main Gears" TextAlignment="Left"/>
        </Button>
        <TextBox x:Name="TextBoxNumGears" Grid.Row="3" Grid.Column="1" Text="{Binding NumGears}" Focusable="False"/>
        <Button x:Name="ButtonWheelsOnGear" Grid.Row="4" Grid.Column="0" HorizontalContentAlignment="Stretch">
            <TextBlock Text="Wheels on Main Gear" TextAlignment="Left"/>
        </Button>
        <TextBox x:Name="TextBoxWheelsOnGear" Grid.Row="4" Grid.Column="1" Text="{Binding WheelsOnGear}" Focusable="False"/>
        <Button x:Name="ButtonTirePressure" Grid.Row="5" Grid.Column="0" HorizontalContentAlignment="Stretch">
            <TextBlock x:Name="TxtButtonTirePressure" Text="Tire Pressure (psi)" TextAlignment="Left"/>
        </Button>
        <TextBox x:Name="TextBoxTirePressure" Grid.Row="5" Grid.Column="1" Text="{Binding TirePressure}" Focusable="False"/>
        <Button x:Name="ButtonGrossWeight" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Stretch" Grid.ColumnSpan="2" Opacity="0"/>
        <Button x:Name="ButtonGrossWeightOnGears" Grid.Row="2" Grid.Column="0"  HorizontalContentAlignment="Stretch" Grid.ColumnSpan="2" Opacity="0"/>
        <Button x:Name="ButtonNumGears" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Stretch" Opacity="0" Grid.ColumnSpan="2"/>
        <Button x:Name="ButtonTireP" Grid.Row="5" Grid.Column="0" HorizontalContentAlignment="Stretch" Opacity="0" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
