<Window x:Class="AboutBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About FEAFAA" Height="450" Width="450" Icon="Images/FEAFAA.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="lblFEAFAA" FontWeight="Bold" FontSize="18">FEAFAA Version 4.0</Label>
        <Label x:Name="lblDate" Grid.Row="1">Aug, 2025</Label>
        <Label  Grid.Row="2" >
            <AccessText x:Name="lblCredits" TextWrapping="Wrap" Text="Created October 5"/>
        </Label>
        <Label  Grid.Row="3">
            <AccessText x:Name="LblComments" TextWrapping="Wrap" Text=""/>
        </Label>
        <Button x:Name="btn_OK" Grid.Row="4"  Width="55" Height="32" HorizontalAlignment="Right" Margin="0,0,20,0">_Ok</Button>
    </Grid>
</Window>
